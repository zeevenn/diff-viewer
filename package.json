{
  "name": "diff-viewer",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "description": "A simple real-time diff viewer including text, image, folder and so on diff.",
  "author": "Ziven <contact@ziven.me>",
  "license": "MIT",
  "keywords": [
    "diff",
    "viewer",
    "text",
    "image",
    "folder"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "vite preview",
    "inspector": "pnpx node-modules-inspector",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@monaco-editor/react": "4.7.0-rc.0",
    "@tailwindcss/vite": "^4.1.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.1",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "1.53.1",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@zeevenn/eslint-config": "^0.2.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix"
    ]
  }
}
